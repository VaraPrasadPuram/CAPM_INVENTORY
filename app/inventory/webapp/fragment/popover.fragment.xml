<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		id="myPopover"
		title="{oJLoginuserModel>Username}"
		class="zEP_profilePop sapUiResponsivePadding--header sapUiResponsivePadding--footer"
		placement="Bottom"
		initialFocus="email">
		<footer>
				<Button
					id="email"
					text="{oJLoginuserModel>EmailId}"
					press="handleEmailPress" />
		</footer>
		
	</Popover>
</core:FragmentDefinition>